<div class="container">
  <h1>Cocktails</h1>

<div class="btn"><%= link_to 'Create a cocktail', new_cocktail_path %></div>

<div class="container">
  <div class="row">

    <% @cocktails.each do |cocktail| %>    
      <div class="col-xs-12 col-sm-6 col-lg-4 my-1">
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card card-link" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2))">
              <h1><%= cocktail.name %></h1>
              <%= cl_image_tag("txgb0ylchgq674olohes",
              width: 400, height: 300, crop: :fill) %>              
              <% end %>
          </div>
      </div>
    <% end %>

  </div>
</div>
</div>
